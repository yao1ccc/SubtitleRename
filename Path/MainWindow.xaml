<Window
    x:Class="LearnPath.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LearnPath.ViewModels"
    Width="600"
    Height="800"
    Background="#FF1F1F1F">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/TextBoxDictionary.xaml" />
                <ResourceDictionary Source="/Styles/ListDictionary.xaml" />
                <ResourceDictionary Source="/Styles/ButtonDictionary.xaml" />
                <ResourceDictionary Source="/Styles/ListItemDictionary.xaml" />
                <ResourceDictionary Source="/Styles/LoopButtonDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="5">
            <TextBox.Style>
                <Style BasedOn="{StaticResource TextBoxStyle1}" TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Text" Value="{Binding RootFolder, Mode=OneWayToSource, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, Converter={x:Static vm:DirectoryInfoConverter.Instance}}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="False">
                            <Setter Property="Text" Value="{Binding RootFolder, Mode=OneWay, Converter={x:Static vm:DirectoryNameConverter.Instance}}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox
                Grid.Row="0"
                Grid.Column="0"
                Margin="5"
                Style="{StaticResource TextBoxStyle1}"
                Text="{Binding VideoFilter, UpdateSourceTrigger=PropertyChanged, Converter={x:Static vm:RegexConverter.Instance}}" />
            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Margin="5"
                Style="{StaticResource TextBoxStyle1}"
                Text="{Binding SubtitleFilter, UpdateSourceTrigger=PropertyChanged, Converter={x:Static vm:RegexConverter.Instance}}" />
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,5,0"
                    Content="⇦"
                    Style="{StaticResource LoopButtonStyle}" />
                <Button Content="⇨" Style="{StaticResource LoopButtonStyle}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,5,0"
                    Content="⇦"
                    Style="{StaticResource LoopButtonStyle}" />
                <Button Content="⇨" Style="{StaticResource LoopButtonStyle}" />
            </StackPanel>
            <TextBox
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                Style="{StaticResource TextBoxStyle1}"
                Text="{Binding VideoSuffixes, Converter={x:Static vm:SplitConverter.Instance}, ValidatesOnDataErrors=True}" />
            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                Style="{StaticResource TextBoxStyle1}"
                Text="{Binding SubtitleSuffixes, Converter={x:Static vm:SplitConverter.Instance}, ValidatesOnDataErrors=True}" />
        </Grid>
        <ListBox
            Grid.Row="2"
            Margin="5"
            DisplayMemberPath="ShowInfo"
            ItemsSource="{Binding FileCollectionShows, Mode=OneWay}"
            Style="{StaticResource ListBoxStyle1}" />
        <Button
            Grid.Row="3"
            Width="100"
            Height="40"
            Margin="5"
            HorizontalAlignment="Right"
            Content="转换"
            Style="{StaticResource ButtonStyle1}" />
    </Grid>
</Window>
